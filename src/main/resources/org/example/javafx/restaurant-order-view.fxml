<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.RestaurantOrderController" spacing="10" alignment="CENTER">
    <GridPane hgap="10" vgap="10" alignment="CENTER">

        <CheckBox text="Dish 1" fx:id="dish1CheckBox" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Spinner fx:id="dish1Spinner" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100" editable="true" max="10" min="1" initialValue="1"/>

        <CheckBox text="Dish 2" fx:id="dish2CheckBox" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Spinner fx:id="dish2Spinner" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100" editable="true" max="10" min="1" initialValue="1"/>

        <CheckBox text="Dish 3" fx:id="dish3CheckBox" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Spinner fx:id="dish3Spinner" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100" editable="true" max="10" min="1" initialValue="1"/>

    </GridPane>

    <Button text="Place Order" fx:id="orderButton"/>
</VBox>